<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    android:background="#FCFCFD"
    android:fitsSystemWindows="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frameLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/foot_hor_rec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        app:layout_constraintEnd_toStartOf="parent" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/frameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:paddingTop="210dp"
                    app:layout_constraintBaseline_toBottomOf="@id/layout_would_like"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editTextText"
                            android:layout_width="wrap_content"
                            android:layout_height="58dp"
                            android:layout_weight="1"
                            android:background="@drawable/text_find_food_design"
                            android:drawableStart="@drawable/icon_search"
                            android:drawablePadding="10dp"
                            android:ems="10"
                            android:fontFamily="@font/sofiapro_light"
                            android:inputType="text"
                            android:text="Find for food or restaurant..."
                            android:textColor="#9AA0B4" />

                        <ImageButton
                            android:id="@+id/btn_show_food"
                            android:layout_width="77dp"
                            android:layout_height="92dp"
                            android:background="@color/transparent"
                            android:contentDescription="btn_show"
                            android:scaleType="center"
                            android:src="@drawable/show_foot_btn" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_would_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                    <TextView
                        android:id="@+id/what_would_you_like_to_order"
                        android:layout_width="295dp"
                        android:layout_height="69dp"
                        android:text="@string/what_would_you_like_to_order_string"
                        android:textColor="#323643"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/frameLayout">

                    <ImageButton
                        android:id="@+id/nav_drawer_btn"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:background="@color/transparent"
                        android:contentDescription="drawer_btn"
                        android:scaleType="centerCrop"
                        android:src="@drawable/show_nav_button" />

                    <RelativeLayout
                        android:id="@+id/group_18138"
                        android:layout_width="167dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/deliver_to"
                            android:layout_width="67.4dp"
                            android:layout_height="21.4dp"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginStart="40dp"
                            android:gravity="center"
                            android:text="@string/deliver_to_string"
                            android:textColor="@color/deliver_to_color"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/path_857"
                            android:layout_width="7.91dp"
                            android:layout_height="5.23dp"
                            android:layout_marginStart="110dp"
                            android:layout_marginTop="8.5dp"
                            android:contentDescription="path_857"
                            android:src="@drawable/arrow" />

                        <TextView
                            android:id="@+id/_4102_pretty_view_lane"
                            android:layout_width="159dp"
                            android:layout_height="22.5dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_horizontal|center"
                            android:layout_marginStart="0dp"
                            android:layout_marginTop="21dp"
                            android:text="@string/_4102_pretty_view_lane_string"
                            android:textColor="#FE724C"
                            android:textSize="15sp" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/mask_group"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:layout_marginStart="10dp"
                        android:contentDescription="mask_group"
                        android:scaleType="centerCrop"
                        android:src="@drawable/mask_group" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/frameLayout3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_light"
                    android:text="Featured Restaurants"
                    android:textColor="#323643"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/linearLayout6"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

                <TextView
                    android:id="@+id/txt_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:drawableEnd="@drawable/arrow_view"
                    android:drawablePadding="5dp"
                    android:drawableTint="#F56844"
                    android:fontFamily="@font/sofiapro_light"
                    android:text="View All"
                    android:textColor="#F56844"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayout6"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/featured_res_hor"
                    android:layout_width="match_parent"
                    android:layout_height="245dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/popular_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sofiapro_light"
                    android:text="Popular Items"
                    android:textColor="#323643"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/featured_res_hor"
                    app:layout_constraintTop_toBottomOf="@+id/featured_res_hor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/food_popular_res_hor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/popular_item" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:background = "#ffffff">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="25dp"
                        android:src="@drawable/nav_icon_compass"/>

                    <ImageView
                        android:layout_width="19.81dp"
                        android:layout_height="23.76dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="45dp"
                        android:src="@drawable/nav_icon_delivery"/>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="24.13dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="45dp"
                        android:src="@drawable/nav_icon_cart"/>
                    <ImageView
                        android:layout_width="21.65dp"
                        android:layout_height="19.79dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="45dp"
                        android:src="@drawable/nav_icon_favorite"/>
                    <ImageView
                        android:layout_width="20.28dp"
                        android:layout_height="23.99dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="45dp"
                        android:src="@drawable/nav_icon_notification"/>

                </LinearLayout>

            </com.google.android.material.bottomnavigation.BottomNavigationView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"/>



</androidx.drawerlayout.widget.DrawerLayout>